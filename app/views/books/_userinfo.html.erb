<div class="col-md-3">

  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <div class="btn btn-outline-secondary btn-block edit_user">
      <%= link_to "Edit", edit_user_path(user.id) %>
    </div>
  </div>

  <h2 class="mt-3">New book</h2>

  <%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Opinion</h5>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <% end %>

</div>